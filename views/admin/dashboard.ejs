<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - NewsPortal</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- include('../partials/navbar') %>

    <main>
      <div class="admin-layout">
        <aside class="admin-sidebar">
          <h3>Admin Menu</h3>
          <nav>
            <a href="/admin/dashboard" class="active">ðŸ“Š Dashboard</a>
            <a href="/admin/users">ðŸ‘¥ Users</a>
            <a href="/admin/articles/new">âž• New Article</a>
          </nav>
        </aside>

        <div class="admin-content">
          <div class="admin-header">
            <h1>Dashboard</h1>
            <p>Welcome back, <%= user.username %>!</p>
          </div>

          <div class="stats-grid">
            <div class="stat-card">
              <h3>Total Articles</h3>
              <p class="stat-number"><%= stats.total %></p>
            </div>
            <div class="stat-card">
              <h3>Categories</h3>
              <p class="stat-number"><%= stats.categories %></p>
            </div>

            <div class="stat-card">
              <h3>Featured</h3>
              <p class="stat-number"><%= stats.featured %></p>
            </div>
          </div>

          <div class="admin-section">
            <div class="section-header">
              <h2>All Articles</h2>
              <a href="/admin/articles/new" class="btn btn-primary"
                >Create New Article</a
              >
            </div>

            <div class="articles-table">
              <table>
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Date</th>
                    <th>Views</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% articles.forEach(article => { %>
                  <tr>
                    <td>
                      <a href="/article/<%= article.id %>" target="_blank"
                        ><%= article.title %></a
                      >
                    </td>
                    <td>
                      <span class="category-badge"
                        ><%= article.category %></span
                      >
                    </td>
                    <td><%= article.author %></td>
                    <td><%= article.date.toLocaleDateString() %></td>
                    <td><%= article.views %></td>
                    <td>
                      <% if (article.featured) { %>
                      <span class="badge badge-success">Featured</span>
                      <% } else { %>
                      <span class="badge">Normal</span>
                      <% } %>
                    </td>
                    <td class="actions">
                      <a
                        href="/admin/articles/<%= article.id %>/edit"
                        class="btn-edit"
                        >Edit</a
                      >
                      <form
                        action="/admin/articles/<%= article.id %>/delete"
                        method="POST"
                        style="display: inline"
                        onsubmit="return confirm('Are you sure you want to delete this article?');"
                      >
                        <button type="submit" class="btn-delete">Delete</button>
                      </form>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
